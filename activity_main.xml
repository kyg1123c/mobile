<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#82B8ED"
        android:padding="8dp"
        android:text="SelfProject4_4"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="선택을 시작하시겠습니까?"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/switchStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="시작" />

    <!-- 선택 UI 그룹: 스위치에 따라 보이고 숨겨짐 -->
    <LinearLayout
        android:id="@+id/choiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="좋아하는 안드로이드 버전은?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioOreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오레오(8.0)" />

            <RadioButton
                android:id="@+id/radioPie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파이(9.0)" />

            <RadioButton
                android:id="@+id/radioQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q(10.0)" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#82B8ED"
        android:text="종료"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#82B8ED"
        android:text="처음으로"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>
